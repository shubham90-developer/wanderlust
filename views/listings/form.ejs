<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <form method="post" action="/listings/new" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="title mb-2">
                    <label class="form-label">Title:</label>
                    <input type="text" placeholder="Enter your title" class="form-control" name="Listing[title]" required>
                    <div class="invalid-feedback">
                        Please enter a valid title.
                    </div>
                </div>
                
                <div class="description mb-2">
                    <label class="form-label">Description:</label>
                    <textarea type="text" placeholder="Enter your description" class="form-control" name="Listing[description]" required></textarea>
                    <div class="invalid-feedback">
                        Please add a description.
                    </div>
                </div>
                
                <div class="image mb-2">
                    <label class="form-label">Image:</label>
                    <input type="file" placeholder="Image link/URL" class="form-control" name="Listing[image]" />
                    <!-- <div class="invalid-feedback">
                        Please add a valid image link/URL.
                    </div> -->
                </div>
                
                <div class="price mb-2">
                    <label class="form-label">Price:</label>
                    <input type="text" class="form-control" name="Listing[price]" required>
                    <div class="invalid-feedback">
                        Please enter a valid price.
                    </div>
                </div>
                
                <div class="row">
                    <div class="location mb-2 col-md-8">
                        <label class="form-label">Location:</label>
                        <input type="text" class="form-control" name="Listing[location]" required>
                        <div class="invalid-feedback">
                            Please enter a valid location.
                        </div>
                    </div>
                    
                    <div class="country mb-2 col-md-4">
                        <label class="form-label">Country:</label>
                        <input type="text" class="form-control" name="Listing[country]" required>
                        <div class="invalid-feedback">
                            Please enter a valid country name.
                        </div>
                    </div>
                    
                </div>
                <br>
                <button class="btn add-btn">Add</button> 
            </form>    
        </div>
    </div>
</body>
