<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="filters">
        
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            <p>trending</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-bed"></i>
            <p>rooms</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain-city"></i>
            <p>smart-cities</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain-sun"></i>
            <p>mountains</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>amazing-pools</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-campground"></i>
            <p>campaign</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-cow"></i>
            <p>farms</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-fan"></i>
            <p>artic</p>
        </div>
        <div class="tax-toggle me-3">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display with tax</label>
            </div>
        </div>
        <script>
            let tax_switch = document.getElementById("flexSwitchCheckDefault");
            
            tax_switch.addEventListener("click" ,()=>{
                console.log("clicked");
                let tax_value = document.getElementsByClassName("tax-info");
                for(info of tax_value){
                    if(info.style.display != "inline"){
                        info.style.display = "inline";
                    }else{
                        info.style.display = "none";
                    }
                    
                }
            })
        </script>
    </div>
    <div class="container">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
            <% for (let list of allListings) { %>
                <div class="col index-card">
                    <a href="/listings/<%= list._id %>" class="card-links">
                        <div class="card">
                            <img 
                                src="<%= list.image.url %>" 
                                class="card-img-top" 
                                alt="<%= list.title ? list.title : 'No Title' %>" 
                                style="height: 20rem; object-fit: cover;">
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%= list.title ? list.title : 'No Title' %></b>
                                    <br>
                                    &#8377;<%= list.price ? list.price.toLocaleString("en-IN") : 'N/A' %>/night
                                    <i class="tax-info">&nbsp; +18% GST</i>
                                </p>
                                
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</body>




