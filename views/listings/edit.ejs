<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <form method="post" action="/listings/<%= listing._id %>/edit?_method=PATCH" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="title mb-2">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" value="<%= listing.title %>" class="form-control" name="Listing[title]" required>
                    <div class="invalid-feedback">
                        Please enter valid title.
                    </div>
                </div>
                <div class="description mb-2">
                    <label for="description" class="form-label">Description:</label>
                    <input type="text" value="<%= listing.description %>" class="form-control" name="Listing[description]" required>
                    <div class="invalid-feedback">
                        Please add description.
                    </div>
                </div>

                <div class="mb-2">
                    Original listing Image: <br>
                    <img src="<%= originalImageUrl %>" alt="Listing Image">
                </div>
                <div class="image mb-2">
                    <label for="image" class="form-label">image:</label>
                    <input type="file" class="form-control" name="Listing[image]" required>
                    <div class="invalid-feedback">
                        Please add valid image file.
                    </div>
                </div>
                <div class="price mb-2">
                    <label for="price" class="form-label">price:</label>
                    <input type="text" value="<%= listing.price %>" class="form-control" name="Listing[price]" required>
                    <div class="invalid-feedback">
                        Please enter valid price.
                    </div>
                </div>
                <div class="row">
                    <div class="location mb-2 col-md-8">
                        <label for="location" class="form-label">location:</label>
                        <input type="text" value="<%= listing.location %>" class="form-control" name="Listing[location]" required>
                        <div class="invalid-feedback">
                            Please enter valid location.
                        </div>
                    </div>
                    <div class="country mb-2 col-md-4">
                        <label for="country" class="form-label">country:</label>
                        <input type="text" value="<%= listing.country %>" class="form-control" name="Listing[country]" required>
                        <div class="invalid-feedback">
                            Please enter valid country name.
                        </div>
                    </div>
                </div>
        
                <button class="btn edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>
</body>
