<style>
    .search-input{
        border-radius: 25px;
        padding: 0.5rem 1rem 0.5rem 1rem;
    }

    .btn-search{
        background-color: #fa424d;
        border-radius: 25px;
        padding: 0.5rem 1rem 0.5rem 1rem;
        display: flex;
        
    }

    .btn-search i{
        padding-top: 0.3rem;
        padding-left: 0.5rem;
        padding-right: 0.3rem;

    }


    .btn-search:hover{
        background-color: #fa424d;
    }
</style>



<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
        <!-- Brand/Logo -->
        <a class="navbar-brand" href="/">
            <i class="fa-regular fa-compass"></i>
        </a>

        <!-- Navbar Toggler Button (For mobile view) -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Links (Collapse) -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <!-- Left-aligned Nav Links -->
            <div class="navbar-nav me-auto">
                <a class="nav-link" href="/listings">Explore</a>
            </div>

            <form class="d-flex me-auto" role="search">
                <input class="form-control me-2 search-input" type="search" placeholder="Search destinations" aria-label="Search">
                <button class="btn btn-search" type="submit"> <i class="fa-solid fa-magnifying-glass"></i> Search</button>
            </form>

            <!-- Airbnb your Home Link -->
            <a class="nav-link me-3" href="/listings/new">Airbnb your home</a>

            <!-- User Authentication Links (Sign Up / Log In / Log Out) -->
            <div class="navbar-nav">
                <% if (!currUser) { %>
                    <a class="nav-link" href="/signup"><b>Sign up</b></a>
                    <a class="nav-link" href="/login"><b>Log in</b></a>
                <% } %>

                <% if (currUser) { %>
                    <a class="nav-link" href="/logout">Log out</a>
                <% } %>
            </div>
        </div>
    </div>
